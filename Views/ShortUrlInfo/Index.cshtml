@model List<ShortUrlInfoViewModel>

@{
    ViewData["Title"] = "Short URL Info";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Short Code</th>
                <th>Original URL</th>
                <th>Created By</th>
                <th>Created Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.ShortCode</td>
                    <td>
                        <a href="@item.OriginalUrl" target="_blank">@item.OriginalUrl</a>
                    </td>
                    <td>@item.CreatedBy</td>
                    <td>@item.CreatedDate.ToString("g")</td>
                </tr>
            }
        </tbody>
    </table>
</div>